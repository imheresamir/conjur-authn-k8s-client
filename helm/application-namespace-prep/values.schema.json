{
    "$schema": "http://json-schema.org/draft-07/schema",
    "properties": {
        "authnK8s": {
            "required": [
                "goldenConfigMap",
                "namespace",
                "backendSecret",
                "conjurAdminPassword"
            ],
            "properties": {
                "goldenConfigMap": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "backendSecret": {
                    "type": "string"
                },
                "conjurAdminPassword": {
                    "type": "string"
                }
            }
        },
        "authnRoleBinding": {
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "conjurConfigMap": {
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        }
    }
}
